@model WebApplication1.Models.Movie
@{
   
    ViewBag.Title = "AddMovie";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>AddMovie</h2>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("AddMovie", "Movie", FormMethod.Post, new { role = "form" }))
            { 
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Movie Name")
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Genre, "Genre")
                    @Html.EnumDropDownListFor(m => m.Genre, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Year, "Year")
                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Director, "Director")
                    @Html.TextBoxFor(m => m.Director, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Url, "Url")
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                </div>
                <input type="submit" class="btn btn-default" value="Add" />
            }
        </div>
    </div>
</div>


